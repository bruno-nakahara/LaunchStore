<div class="item">
    <div>Nome Completo</div>
    <div class="input">
        <input required="required" type="text" name="name" placeholder="Digite seu nome completo" value="{{ user.name }}">
    </div>
</div>

<div class="item">
    <div>E-mail</div>
    <div class="input">
        <input required="required" type="email" name="email" placeholder="Digite seu email completo" value="{{ user.email }}" onblur="Validate.apply(this, 'isEmail')">
    </div>
</div>

<div class="item">
    <div>Password</div>
    <div class="input">
        <input required="required" type="password" name="password" placeholder="Escolha uma senha segura" value="{{ user.password }}">
    </div>
</div>

{% if not user.id %}

    <div class="item">
        <div>Repetir Password</div>
        <div class="input">
            <input required="required" type="password" name="passwordRepeat" placeholder="Repita a senha">
        </div>
    </div>

{% endif %}

<div class="item">
    <div>CPF ou CNPJ</div>
    <div class="input">
        <input required="required" type="text" name="cpf_cnpj" placeholder="Digite seu documento" value="{{ user.cpf_cnpj }}" onkeydown="Mask.apply(this, 'cpfCnpj')" onblur="Validate.apply(this, 'isCpfCnpj')">
    </div>
</div>

<div class="item">
    <div>CEP</div>
    <div class="input">
        <input required="required" type="text" name="cep" placeholder="xxxxx-xxx" value="{{ user.cep }}" onkeydown="Mask.apply(this, 'cep')" onblur="Validate.apply(this, 'isCep')">
    </div>
</div>

<div class="item">
    <div>Endereço</div>
    <div class="input">
        <input required="required" type="text" name="adress" placeholder="Digite seu endereço" value="{{ user.adress }}">
    </div>
</div>