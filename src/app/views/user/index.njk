{% extends "layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}

    {% call card.render('Detalhes', 'user-dashboard container form') %}
        <form action="/users?_method=PUT" method="post">
            <div class="fields">
                {% include "user/fields.njk" %}
                <input type="hidden" name="id" value="{{user.id}}">
            </div>
            <button class="button edit" type="submit">Atualizar</button>
            <button class="button delete" type="submit" form="form-delete">Deletar</button>
        </form>
        <form action="/users?_method=DELETE" method="post" id="form-delete">
            <input type="hidden" name="id" value="{{user.id}}">
        </form>
    {% endcall %}

{% endblock %}