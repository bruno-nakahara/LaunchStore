{% extends "layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}

    {% call card.render('Editar Produto', 'form container') %}

        <form action="/products?_method=PUT" method="post" enctype="multipart/form-data">

            <div class="fields">
                {% include "products/fields.njk" %}
                <input type="hidden" name="id" value="{{product.id}}">
            </div>

            <button class="button edit" type="submit">Atualizar</button>
            <button class="button delete" type="submit" form="form-delete">Deletar</button>

        </form>

        <form action="/products?_method=DELETE" method="post" id="form-delete">
            <input type="hidden" name="id" value="{{product.id}}">
        </form>

    {% endcall %}

{% endblock %}